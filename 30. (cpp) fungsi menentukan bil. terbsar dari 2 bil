#include<iostream>
using namespace std;
/*1. Definisikanlah function untuk menentukan bilangan terbesar dari 2 bilangan yang diinputkan di main(). 
Function mempunyai parameter berupa 2 buah bilangan yang akan dibandingkan dan memberikan return value berupa 
bilangan yang terbesar.  Sertakan pula prototype function tsb!
nama 	= Ikko Cahya Awinata
kelas 	= TI A 2022
NIM		= 22051204038*/

int bilmaks(int,int);
main(){
	int bil1, bil2, max;
	cout<<"masukkan bilangan pertama :"<<endl;
	cin>>bil1;
	cout<<"masukkan bilangan kedua : "<<endl;
	cin>>bil2;
	max = bilmaks(bil1,bil2);
	
	cout<<"Bilangan "<< max << "adalah bilangan yang lebih besar"<<endl;
}

	int bilmaks(int input1, int input2)
{
	if(input1 < input2)
		return input2;
	else
	return input1;
}
