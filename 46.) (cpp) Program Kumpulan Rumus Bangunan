    cout << " Masukkan tinggi alas  : " ; cin >> t;
    L_alas = sisi * sisi;
    L_segitiga = 1.0/2.0 * sisi * t;
    L_limas =  (4 * L_segitiga) + L_alas;
    cout <<"Rumusnya yaitu : Luas = (4 * Luas Segitiga) + Luas Alas = (4 * " << L_segitiga << " ) + " << L_alas << " = " << L_limas << endl;
