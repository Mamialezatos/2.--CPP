#include<iostream>
using namespace std;

//prototipe fungsi
int banding(int a, int b);

//fungsi utama
int main(){
	
	int bil1, bil2, hasil;
	cout<<"-> membandingkan dua bilangan dengan menggunakan fungsi<-\n";
	cout<<"---------------------------------------------------------\n\n";
	cout<<"masukkan bilangan pertama \t:";
	cin>>bil1;
	cout<<endl;
	
	cout<<"masukkan bilangan kedua \t:";
	cin>>bil2;
	cout<<endl;
	cout<<"---------------------------------------------------------\n";
	
	hasil = banding(bil1, bil2);

	cout<<" bilangan terbesarnya adalah \t: "<<hasil;	
}

int banding(int a, int b){
	
	if (a<b){
	return b;
			
	}
	else if (a>b){
	return a;
	}
	else {
		return 0;
	}
}
