    phi = 3.14;
    Phi = 22.0/7.0;
    rumusa = Phi*r*sisi;
    rumus = phi*r*sisi;
    cout << "Rumus A yaitu : Luas = phi * r * sisi =  3.14 * " << r << " * " << sisi <<  " = " <<  rumus << endl;
    cout << "Rumus B yaitu : Luas = phi * r * sisi =  22/7 * " << r << " * " << sisi << " = " << rumusa << endl;
    cout << "Hasilnya luas permukaan tabung (phi =3.14 ) : " << rumus << " cm " << endl;
    cout << "Hasilnya luas permukaan tabung (phi =22/7 ) : " << rumusa << " cm " << endl;
    break;

case 30:
    cout << "\n---- 30.) MENGHITUNG LUAS PERMUKAAN KERUCUT ----" << endl;
    cout << "===========================================================================" << endl;
    cout << "Masukkan jari-jari kerucut : " ; cin >> r;;
    cout << "Masukkan sisi kerucut : "; cin >> sisi;
    phi = 3.14;
    Phi = 22.0/7.0;
    rumusa = Phi*r*sisi;
    rumus = phi*r*sisi;
    rumus1 = (Phi*r*sisi) + (Phi* pow(r,2));
    rumus2 = (phi*r*sisi) + (Phi* pow(r,2));
    cout << "Rumus A yaitu : Luas = (phi * r * sisi) + (phi * r pangkat 2 = ( 22/7 * " << r << " * " << sisi << " ) + (22/7 * " << pow(r,2) << " ) = " << rumus1 << endl;
    cout << "Rumus B yaitu : Luas = (phi * r * sisi) + (phi * r pangkat 2 = ( 3.14 * " << r << " * " << sisi << " ) + (3.14 * " << pow(r,2) << " ) = " << rumus2 << endl;
    cout << "Hasilnya luas permukaan tabung (phi =22/7 ) : " << rumus1 << " cm " << endl;
    cout << "Hasilnya luas permukaan tabung (phi =3.14 ) : " << rumus2 << " cm " << endl;
    break;


case 31:
    cout << "\n---- 31.) MENGHITUNG VOLUME KERUCUT ----" << endl;
    cout << "===========================================================================" << endl;
    cout << "Masukkan jari-jari kerucut : " ; cin >> r;
    cout << "Masukkan tinggi kerucut : " ; cin >> T;
    phi = 3.14;
    Phi = 22.0/7.0;
    rumusa = 1/3*Phi*pow(r,2)*T;
    rumusb = 1/3*phi*pow(r,2)*T;
    cout << "Rumus A yaitu : Luas = 1/3 * phi * r pangkat 2 * tinggi = 1/3 * 22/7 * " << pow (r,2) << " * " << T << " = " <<  rumusa << endl;
    cout << "Rumus B yaitu : Luas = 1/3 * phi * r pangkat 2 * tinggi = 1/3 * 3.14 *" << pow (r,2) << " * " << T << " = " <<  rumusb << endl;
    cout << "Hasilnya luas permukaan tabung (phi =22/7 ) : " << rumusa << " cm " << endl;
    cout << "Hasilnya luas permukaan tabung (phi =3.14 ) : " << rumusb << "cm " << endl;
    break;


case 32:
    cout << "\n---- 32.) MENGHITUNG LUAS BOLA ----" << endl;
    cout << "===========================================================================" << endl;
    cout << "Masukkan jari-jari atau diameter bola : " ; cin >> r;
    phi = 3.14;
    Phi = 22.0/7.0;
    rumusa = 4*Phi*pow(r,2);
    rumusb = 4*phi*pow(r,2);
    cout << "Rumus A yaitu : Luas = 4 * phi * r pangkat 2 = 4 * 22/7 * " << pow (r,2) << " = " << rumusa << endl;
    cout << "Rumus B yaitu : Luas = 4 * phi * r pangkat 2 = 4 * 3.14 * " << pow (r,2) << " = " << rumusb << endl;
    cout << "Hasilnya luas permukaan tabung (phi =22/7 ) : " <<  rumusa << " cm " << endl;
    cout << "Hasilnya luas permukaan tabung (phi =3.14 ) : "<< rumusb << " cm " << endl;
    break;


case 33:
    cout << "\n---- 33.) MENGHITUNG VOLUME BOLA ----" << endl;
    cout << "===========================================================================" << endl;
    cout << "Masukkan jari-jari atau diameter bola : " ; cin >> r;
    phi = 3.14;
    Phi = 22.0/7.0;
    rumusa = 4.0/3.0*Phi*pow(r,3);
    rumusb = 4.0/3.0*phi*pow(r,3);
    cout << "Rumus A yaitu : Luas = 4/3 * phi * r pangkat 3 = 4/3 * 22/7 * " << pow(r,3) << " = " << rumusa << endl;
    cout << "Rumus A yaitu : Luas = 4/3 * phi * r pangkat 3 = 4/3 * 3,14 * " << pow(r,3) << " = " << rumusb << endl;
    cout << "Hasilnya luas permukaan tabung (phi =22/7 ) : " << rumusa << " cm " << endl;
    cout << "Hasilnya luas permukaan tabung (phi =3.14 ) : " << rumusb << " cm " << endl;
    break;

}
cout << "Ada yang bisa saya bantu lagi [Y/N] : ";
cin >> j;
}while (j == 'Y' || j == 'y');
cout << "===========================================================" << endl;
cout << " Terima kasih telah memakai program ini "<< endl;
cout << "Made by Ikkoc_awinata"<< endl;
}
