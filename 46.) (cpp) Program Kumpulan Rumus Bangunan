    cout <<"Rumusnya yaitu : Luas = 2*(Panjang * lebar) + 2*(Panjang * tinggi) + 2*(lebar*tinggi) = 2 * (" << p << " * " << q << ") + 2 * (" << p << " * " << t << ") + 2*(" << p  << " * " << t << ") = " << rumus << endl;
    cout <<"hasilnya adalah : " << rumus << " cm " << endl;
    cout << endl;
