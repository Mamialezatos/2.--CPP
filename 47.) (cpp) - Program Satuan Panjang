void sambutan(){
   cout <<"================================================================================"<< endl;
    cout << "       S E L A M A T   D A T A N G   D I   P R O G R A M " << endl;
    cout << "                  CONVERT SATUAN PANJANG " << endl;
}

void table(){
    cout <<"================================================================================"<< endl;
    cout <<"NO |                 SATUAN PANJANG               "<< endl;
    cout <<"================================================================================"<< endl;
    cout <<"1.  | KM (Kilometer)       ->   HM (Hektometer)                                 |"<< endl;
    cout <<"2.  | KM (Kilometer)       ->   DAM (Dekameter)                                 |"<< endl;
    cout <<"3.  | KM (Kilometer)       ->   M (Meter)                                       |"<< endl;
    cout <<"4.  | KM (Kilometer)       ->   DM (Desimeter)                                  |"<< endl;
    cout <<"5.  | KM (Kilometer)       ->   CM (Centimeter)                                 |"<< endl;
    cout <<"6.  | KM (Kilometer)       ->   MM (Milimeter)                                  |"<< endl;
    cout <<"7.  | HM (Hektometer)      ->   KM (Kilometer)                                  |"<< endl;
    cout <<"8.  | HM (Hektometer)      ->   DAM (Dekameter)                                 |"<< endl;
    cout <<"9.  | HM (Hektometer)      ->   M (Meter)                                       |"<< endl;
    cout <<"10. | HM (Hektometer)      ->   DM (Desimeter)                                  |"<< endl;
    cout <<"11. | HM (Hektometer)      ->   CM (Centimeter)                                 |"<< endl;
    cout <<"12. | HM (Hektometer)      ->   MM (Milimeter)                                  |"<< endl;
    cout <<"13. | DAM (Dekameter)      ->   KM (Kilometer)                                  |"<< endl;
    cout <<"14. | DAM (Dekameter)      ->   HM (Hektometer)                                 |"<< endl;
    cout <<"15. | DAM (Dekameter)      ->   M (Meter)                                       |"<< endl;
    cout <<"16. | DAM (Dekameter)      ->   DM (Desimeter)                                  |"<< endl;
    cout <<"17. | DAM (Dekameter)      ->   CM (Centimeter)                                 |"<< endl;
    cout <<"18. | DAM (Dekameter)      ->   MM (Milimeter)                                  |"<< endl;
    cout <<"19. | M (Meter)            ->   KM (Kilometer)                                  |"<< endl;
    cout <<"20. | M (Meter)            ->   HM (Hektometer)                                 |"<< endl;
    cout <<"21. | M (Meter)            ->   DAM (Dekameter)                                 |"<< endl;
    cout <<"22. | M (Meter)            ->   DM (Desimeter)                                  |"<< endl;
    cout <<"23. | M (Meter)            ->   CM (Centimeter)                                 |"<< endl;
    cout <<"24. | M (Meter)            ->   MM (Milieter)                                   |"<< endl;
    cout <<"25. | DM (Desimeter)       ->   KM (Kilometer)                                  |"<< endl;
    cout <<"26. | DM (Desimeter)       ->   HM (Hektometer)                                 |"<< endl;
    cout <<"27. | DM (Desimeter)       ->   DAM (Dekameter)                                 |"<< endl;
    cout <<"28. | DM (Desimeter)       ->   M (Meter)                                       |"<< endl;
    cout <<"29. | DM (Desimeter)       ->   CM (Centimeter)                                 |"<< endl;
    cout <<"30. | DM (Desimeter)       ->   MM (Milimeter)                                  |"<< endl;
    cout <<"31. | CM (Centimeter)      ->   KM (Kilometer)                                  |"<< endl;
    cout <<"32. | CM (Centimeter)      ->   HM (Hektometer)                                 |"<< endl;
    cout <<"33. | CM (Centimeter)      ->   DAM (Dekameter)                                 |"<< endl;
    cout <<"34. | CM (Centimeter)      ->   M (Meter)                                       |"<< endl;
    cout <<"35. | CM (Centimeter)      ->   DM (Desimeter)                                  |"<< endl;
    cout <<"36. | CM (Centimeter)      ->   MM (Milimeter)                                  |"<< endl;
    cout <<"37. | MM (Milimeter)       ->   KM (Kilometer)                                  |"<< endl;
    cout <<"38. | MM (Milimeter)       ->   HM (Hektometer)                                 |"<< endl;
    cout <<"39. | MM (Milimeter)       ->   DAM (Dekameter)                                 |"<< endl;
    cout <<"40. | MM (Milimeter)       ->   M (Meter)                                       |"<< endl;
    cout <<"41. | MM (Milimeter)       ->   DM (Desimeter)                                  |"<< endl;
    cout <<"42. | MM (Milimeter)       ->   CM (Centimeter)                                 |"<< endl;
    cout <<"================================================================================"<< endl;
}

