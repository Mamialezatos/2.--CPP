		float bil1, bil2, bil3, terbesar;
		
		cout<<"masukkan bilangan 1"<<endl;
		cin>>bil1;
		
		cout<<"masukkan bilangan 2"<<endl;
		cin>>bil2;
		
		cout<<"masukkan bilangan 3"<<endl;
		cin>>bil3;
		
	{
		if(bil1>bil2)
		terbesar=bil1;
		
		else
		terbesar = bil2;
		
		if(bil3>terbesar)
		terbesar = bil3;
		
		cout<<endl;
		cout<<"Nilai Terbesarnya adalah ="<<terbesar;cout<<endl;
		
		
