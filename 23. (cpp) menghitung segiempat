#include <iostream>
using namespace std;

double hitungL(double p, double l){
	double L= p*l;
	return L;
}

double hitungK(double p, double l){
	double K= 2 * (p + l );

}

void tampilL(double p, double l){
	double L = hitungL(p,l);
	cout<<"Luas : "<<endl;
	cout<<"L = p x l"<<endl;
	cout<<"L ="<<p<<"x"<<l<<endl;
	cout<<"L ="<<L<<endl;
}
	
void tampilK(double p, double l){
	double K = hitungK(p,l);
	cout<<"Keliling : "<<endl;
	cout<<"K = 2 * (p + l)"<<endl;
	cout<<"K ="<<2<<"x("<<p<<"+"<<l<<")"<<endl;
	cout<<"K ="<<K<<endl;
}

int main()
{
	//L = p x l
	//k = 2 x ( p + l)
	double p,l;
	cout<<"masukkan p : "; cin>>p;
	cout<<"masukkan l : "; cin>>l;
	tampilL(p,l);
	tampilK(p,l);
 }


