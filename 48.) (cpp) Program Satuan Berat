void table(){
    cout <<"================================================================================"<< endl;
    cout <<"NO |                 SATUAN PANJANG               "<< endl;
    cout <<"================================================================================"<< endl;
    cout <<"1.  | KG (kilogram)       ->   HG (hektogram)                                 |"<< endl;
    cout <<"2.  | KG (kilogram)       ->   DAG (dekagram)                                 |"<< endl;
    cout <<"3.  | KG (kilogram)       ->   G (gram)                                       |"<< endl;
    cout <<"4.  | KG (kilogram)       ->   DG (desigram)                                  |"<< endl;
    cout <<"5.  | KG (kilogram)       ->   CG (centigram)                                 |"<< endl;
    cout <<"6.  | KG (kilogram)       ->   MG (miligram)                                  |"<< endl;
    cout <<"7.  | HG (hektogram)      ->   KG (kilogram)                                  |"<< endl;
    cout <<"8.  | HG (hektogram)      ->   DAG (dekagram)                                 |"<< endl;
    cout <<"9.  | HG (hektogram)      ->   G (gram)                                       |"<< endl;
    cout <<"10. | HG (hektogram)      ->   DG (desigram)                                  |"<< endl;
    cout <<"11. | HG (hektogram)      ->   CG (centigram)                                 |"<< endl;
    cout <<"12. | HG (hektogram)      ->   MG (miligram)                                  |"<< endl;
    cout <<"13. | DAG (dekagram)      ->   KG (kilogram)                                  |"<< endl;
    cout <<"14. | DAG (dekagram)      ->   HG (hektogram)                                 |"<< endl;
    cout <<"15. | DAG (dekagram)      ->   G (gram)                                       |"<< endl;
    cout <<"16. | DAG (dekagram)      ->   DG (desigram)                                  |"<< endl;
    cout <<"17. | DAG (dekagram)      ->   CG (centigram)                                 |"<< endl;
    cout <<"18. | DAG (dekagram)      ->   MG (miligram)                                  |"<< endl;
    cout <<"19. | G (gram)            ->   KG (kilogram)                                  |"<< endl;
    cout <<"20. | G (gram)            ->   HG (hektogram)                                 |"<< endl;
    cout <<"21. | G (gram)            ->   DAG (dekagram)                                 |"<< endl;
    cout <<"22. | G (gram)            ->   DG (desigram)                                  |"<< endl;
    cout <<"23. | G (gram)            ->   CG (centigram)                                 |"<< endl;
    cout <<"24. | G (gram)            ->   MG (Milieter)                                  |"<< endl;
    cout <<"25. | DG (desigram)       ->   KG (kilogram)                                  |"<< endl;
    cout <<"26. | DG (desigram)       ->   HG (hektogram)                                 |"<< endl;
    cout <<"27. | DG (desigram)       ->   DAG (dekagram)                                 |"<< endl;
    cout <<"28. | DG (desigram)       ->   G (gram)                                       |"<< endl;
    cout <<"29. | DG (desigram)       ->   CG (centigram)                                 |"<< endl;
    cout <<"30. | DG (desigram)       ->   MG (miligram)                                  |"<< endl;
    cout <<"31. | CG (centigram)      ->   KG (kilogram)                                  |"<< endl;
    cout <<"32. | CG (centigram)      ->   HG (hektogram)                                 |"<< endl;
    cout <<"33. | CG (centigram)      ->   DAG (dekagram)                                 |"<< endl;
    cout <<"34. | CG (centigram)      ->   G (gram)                                       |"<< endl;
    cout <<"35. | CG (centigram)      ->   DG (desigram)                                  |"<< endl;
    cout <<"36. | CG (centigram)      ->   MG (miligram)                                  |"<< endl;
    cout <<"37. | MG (miligram)       ->   KG (kilogram)                                  |"<< endl;
    cout <<"38. | MG (miligram)       ->   HG (hektogram)                                 |"<< endl;
    cout <<"39. | MG (miligram)       ->   DAG (dekagram)                                 |"<< endl;
    cout <<"40. | MG (miligram)       ->   G (gram)                                       |"<< endl;
    cout <<"41. | MG (miligram)       ->   DG (desigram)                                  |"<< endl;
    cout <<"42. | MG (miligram)       ->   CG (centigram)                                 |"<< endl;
    cout <<"================================================================================"<< endl;
}

